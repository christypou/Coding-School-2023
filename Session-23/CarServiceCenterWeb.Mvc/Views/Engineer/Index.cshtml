@model IEnumerable<CarServiceCenter.Model.Engineer>

@{
    ViewData["Title"] = "Engineers";
}

<h1>Engineers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h6>Engineer Name</h6>
            </th>
            <th>
                <h6>Engineer Surname</h6>
            </th>
            <th>
                <h6>Monthly Salary</h6>
            </th>
            <th>
                <h6>Manager</h6>
            </th>
            <th>
                <h6>Options</h6>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryPerMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager.Name)
                    @Html.DisplayFor(modelItem => item.Manager.Surname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
