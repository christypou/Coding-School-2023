@model IEnumerable<CarServiceCenter.Model.TransactionLine>

@{
    ViewData["Title"] = "Transaction Lines";
}

<h1>Transaction Lines</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h6>Duration</h6>
            </th>
            <th>
                <h6>Hourly Charge</h6>
            </th>
            <th>
                <h6>Price</h6>
            </th>
            <th>
                <h6>Time of transaction</h6>
            </th>
            <th>
                <h6>Task</h6>
            </th>
            <th>
                <h6>Engineer</h6>
            </th>
            <th>
                <h6>Options</h6>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transaction.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceTask.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Engineer.Name)
                    @Html.DisplayFor(modelItem => item.Engineer.Surname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
