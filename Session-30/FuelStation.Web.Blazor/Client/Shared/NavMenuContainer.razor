<div class="d-flex justify-content-center">
    <div class="btn-group" role="group" aria-label="Basic example">
        <button type="button" class="btn btn-light" @onclick="ToggleMenuCashier">Cashier</button>
        <button type="button" class="btn btn-light" @onclick="ToggleMenuStaff">Staff</button>
        <button type="button" class="btn btn-light" @onclick="ToggleManager">Manager</button>
    </div>
</div>

@if(showMain==2)
{
    <StaffNavMenu />
}
else if(showMain==3)
{
    <CashierNavMenu />
}
else if (showMain == 1)
{
    <ManagerMenu />
}

@code {
    int showMain = 0;

  
   
    void ToggleMenuCashier()
    {
        showMain = 2;
    }
    void ToggleMenuStaff()
    {
        showMain = 3;
    }
    void ToggleManager()
    {
        showMain = 1;
    }

}